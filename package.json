{
  "name": "dnd35-character-sheet",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "validate:feats": "node scripts/validate-feats.mjs src/data/feats.json",
    "validate:skills": "node scripts/validate-skills.mjs src/data/skills.json",
    "guard:no-inline-styles": "bash -lc \"! grep -R --line-number -E 'style\\s*=\\s*\\{\\s*\\{' src || (echo 'Inline styles found; please extract to CSS' && exit 1)\"",
    "check": "npm run format:check && npm run lint && npm run guard:no-inline-styles",
    "prepare": "husky"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.9.2",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitejs/plugin-react": "^5.1.0",
    "csv-parse": "^6.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.5"
  },
  "lint-staged": {
    "*.{ts,tsx,css,md,json}": [
      "prettier --write"
    ]
  }
}
